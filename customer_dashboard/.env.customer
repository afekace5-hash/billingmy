# CUSTOMER DASHBOARD ENVIRONMENT
# Subdomain: customer-portal.domain.com

#--------------------------------------------------------------------
# ENVIRONMENT
#--------------------------------------------------------------------

CI_ENVIRONMENT = production

#--------------------------------------------------------------------
# APP
#--------------------------------------------------------------------

app.baseURL = 'https://customer-portal.yourdomain.com/'
# app.forceGlobalSecureRequests = true

app.sessionDriver = 'CodeIgniter\Session\Handlers\FileHandler'
app.sessionCookieName = 'customer_session'
app.sessionExpiration = 7200
app.sessionSavePath = NULL
app.sessionMatchIP = false
app.sessionTimeToUpdate = 300
app.sessionRegenerateDestroy = false

app.cookiePrefix = 'customer_'
app.cookieDomain = '.yourdomain.com'
app.cookiePath = '/'
app.cookieSecure = true
app.cookieHTTPOnly = true

#--------------------------------------------------------------------
# DATABASE - GUNAKAN DATABASE YANG SAMA DENGAN ADMIN
#--------------------------------------------------------------------

database.default.hostname = localhost
database.default.database = your_database
database.default.username = your_username  
database.default.password = your_password
database.default.DBDriver = MySQLi
database.default.DBPrefix =
database.default.port = 3306

#--------------------------------------------------------------------
# CUSTOMER PORTAL SPECIFIC
#--------------------------------------------------------------------

customer.enableRegistration = false
customer.requireEmailVerification = true
customer.maxLoginAttempts = 5
customer.loginCooldown = 300

#--------------------------------------------------------------------
# SECURITY
#--------------------------------------------------------------------

encryption.key = YOUR_ENCRYPTION_KEY_HERE

#--------------------------------------------------------------------
# LOGGING
#--------------------------------------------------------------------

logger.threshold = 4
